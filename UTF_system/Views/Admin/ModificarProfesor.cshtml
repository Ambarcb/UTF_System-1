
@{
    ViewBag.Title = "ModificarProfesor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Content/css/reset.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,900" rel="stylesheet">
    <link href="~/Content/img/favicons/favicon1.png" rel="icon">
    <link href="~/Content/img/favicons/favicon2.png" rel="icon">
    <link href="~/Content/img/favicons/favicon3.png" rel="icon">
    <link rel="stylesheet" href="/Content/css/main.css">
    <title>Registrar profesor</title>


    <!--==========================
      Style
    ============================-->


</head>

<body>

    <!--==========================
      Header
    ============================-->

    <ul>
        <li class="logo"> <a href="/Admin"><img src="~/Content/img/logo.png" /></li></a>
        <li class="navbar_option"><a href="/Admin/Logout">Cerrar sesión</a></li>
        <li class="navbar_option"><a href="/Admin">Home</a></li>

    </ul>

    <div class="container_custom">
        <div class="form__top">
            <h2> <span>Modificar profesor @ViewBag.profesor.ID</span></h2>
        </div>
        <form class="form__reg" action="@Url.Action("ModificarProfesor", "Admin")" method="post">

            <input class="input" name="nombre" type="text" placeholder="&#128100;  @ViewBag.profesor.Nombre" required autofocus>
            <input class="input" name="apellido" type="text" placeholder="&#128100;  @ViewBag.profesor.Apellido" required autofocus>
            <input type="hidden" name="idProfesor" value="@ViewBag.profesor.ID"/>

            <div>
                @ViewBag.message
            </div>

            <div class="btn__form">
                <input class="btn__submit" type="submit" value="MODIFICAR">
                <input class="btn__reset" type="reset" value="LIMPIAR">
            </div>

            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

        </form>


    </div>
</body>
</html>
