
@{
    ViewBag.Title = "RegistrarCalificacion";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Content/css/reset.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,900" rel="stylesheet">
    <link href="~/Content/img/favicons/favicon1.png" rel="icon">
    <link href="~/Content/img/favicons/favicon2.png" rel="icon">
    <link href="~/Content/img/favicons/favicon3.png" rel="icon">
    <link rel="stylesheet" href="/Content/css/main.css">
    <title>Registrar calificación</title>

 
</head>

<body>

    <!--==========================
      Header
    ============================-->

    <ul>
        <li class="logo"> <a href="/Admin"><img src="~/Content/img/logo.png" /></li></a>
        <li class="navbar_option"><a href="/Admin/Logout">Cerrar sesión</a></li>
        <li class="navbar_option"><a href="/Admin">Home</a></li>

    </ul>



    <div class="container_custom">
        <div class="form__top">
            <h2> <span>Registrar calificación</span></h2>
        </div>
        <form class="form__reg" action="@Url.Action("RegistrarCalificacion", "Admin")" method="post">


            <input class="input" name="clave" type="text" placeholder="&#128273;  Clave de la asignatura" required autofocus>
            <input class="input" name="idEstudiante" type="text" placeholder="&#127380;  ID del estudiante" required autofocus>
            <input class="input" name="calificacion" type="text" placeholder="&#128221;  Calificación" required>

            <div>
                @ViewBag.message
            </div>

            <div class="btn__form">
                <input class="btn__submit" type="submit" value="REGISTRAR">
                <input class="btn__reset" type="reset" value="LIMPIAR">
            </div>


        </form>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </div>


</body>
</html>


