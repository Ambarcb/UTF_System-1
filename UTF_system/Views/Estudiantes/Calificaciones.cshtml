    ViewBag.Title = "Calificaciones";
}

<head>
    <!-- Favicons -->
    <link href="~/Content/img/favicons/favicon1.png" rel="icon">
    <link href="~/Content/img/favicons/favicon2.png" rel="icon">
    <link href="~/Content/img/favicons/favicon3.png" rel="icon">
    <link href="/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">

    <!-- Bootstrap CSS File -->
    <link href="/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Librerías CSS  -->
    <link href="/Content/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Content/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/Content/lib/venobox/venobox.css" rel="stylesheet">
    <link href="/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="/Content/css/style/style.css" rel="stylesheet">

    <title>Listado de asignaturas</title>
</head>

<!--==========================
  Header
============================-->

<div class="container-fluid">
    <div class="row bg-dark">
        <div class="col-10">
            <a class="navbar-brand m-2" href="/Estudiantes">
                <img src="../../Content/img/logo.png" height="50">
            </a>
        </div>
        <div class="col my-auto">
            <a class="btn btn-outline-light" href="/Estudiantes" role="button">Home</a>
            <a class="btn btn-outline-light " href="/Admin/Logout" role="button">Cerrar sesión</a>
        </div>
    </div>
</div>


<div class="container-fluid p-5" style="margin-top:4%;">
    <h1><font face="Tahoma">Calificaciones</font></h1>

    <table id="estudiantes_table text-center" class="table table-striped table-bordered table-sm" style="margin-top:2%;" cellspacing="0" width="100%">
        <thead>
            <tr class="d-flex">
                <th class="col-sm-2 text-center">Asignatura</th>
                <th class="col-sm-2 text-center">Creditos</th>
                <th class="col-sm-2 text-center">Nota</th>
                <th class="col-sm-2 text-center">Valor de la nota</th>
                <th class="col-sm-2 text-center">Creditos *Valor de la nota</th>
                <th class="col-sm-2 text-center">Puntos de honor</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var calificacion in ViewBag.calificaciones)
            {
                <tr class="d-flex">
                    <td class="col-sm-2 text-center align-middle">@calificacion.Asignatura.Clave</td>
                    <td class="col-sm-2 text-center align-middle">@calificacion.Asignatura.Creditos </td>
                    <td class="col-sm-2 text-center align-middle">@calificacion.Letra</td>
                    <td class="col-sm-2 text-center align-middle">@calificacion.ValorNota</td>
                    <td class="col-sm-2 text-center align-middle"> @calificacion.Asignatura.Creditos * @calificacion.ValorNota</td>
                    <td class="col-sm-2 text-center align-middle"> @(@calificacion.Asignatura.Creditos * @calificacion.ValorNota)</td>
                </tr>
            }
        </tbody>

    </table>

    
        <div class="row"><strong>Total puntos de honor:  </strong>   @ViewBag.totalPuntosHonor</div>
        <div class="row"><strong>TotalCreditos:  </strong>   @ViewBag.totalCreditos</div>
        <div class="row"> <strong>Indice Academico General:  </strong>   @ViewBag.estudiante.Indice</div>

    
</div>


