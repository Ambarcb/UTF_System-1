@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
    <meta charset="utf-8">
    <title>UTF</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/Content/img/favicons/favicon1.png" rel="icon">
    <link href="~/Content/img/favicons/favicon2.png" rel="icon">
    <link href="~/Content/img/favicons/favicon3.png" rel="icon">
    <link href="/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">

    <!-- Bootstrap CSS File -->
    <link href="/Content/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Librerías CSS  -->
    <link href="/Content/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Content/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/Content/lib/venobox/venobox.css" rel="stylesheet">
    <link href="/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/Content/progressbar.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="/Content/css/style/style.css" rel="stylesheet">

    <!-- Libreria para el toast message-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
</head>

<body>

    <!--==========================
      Header
    ============================-->
    <header id="header">
        <div class="container">

            <div id="logo" class="pull-left">
                <a href="/Estudiantes" class="scrollto"><img src="/Content/img/logo.png" alt="" title=""></a>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">

                    <li class="menu-active"><a href="/Estudiantes/Index"><font color="deepskyblue">Home</font></a></li>
                    <li><a href="/Estudiantes/Logout"><font color="deepskyblue">Cerrar sesión</font></a></li>

                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </header><!-- #header -->
    <!--==========================
        Info section
    ============================-->


    <section id="speakers" class="wow fadeInUp">

        <div>
        </div>

        <style>
            body {
                margin: 5px;
            }

            .my-container {
                border: 1px black;
            }

            .my-row {
                border: 3px black;
            }

            .my-col {
                border: 3px black;
            }
        </style>

        <div class="container my-container">
            <div class="row my-row">
                <div class="col my-col">
                    <br><font size="5"><strong>Datos generales</strong></font></br>
                </div>
            </div>
            <div class="row my-row">
                <div class="col my-col">
                    <br><font size="3"><strong>ID:</strong> @ViewBag.estudiante.ID</font></br>
                </div>

                <div class="col my-col">
                    <br><font size="3"><strong>Nombre:</strong> @ViewBag.estudiante.Nombre @ViewBag.estudiante.Apellido</font></br>
                </div>
            </div>

            <div class="row my-row">
                <div class="col my-col">
                    <br><font size="3"><strong>Carrera:</strong> @ViewBag.estudiante.Carrera</font></br>
                </div>


                <div class="col my-col">
                    <br><font size="3"><strong>Índice general:</strong> @ViewBag.estudiante.Indice.ToString("0.00")</font></br>
                </div>
            </div>

            <!--==========================
            Options Section
                        ============================-->


            <div class="section-header">
                <div class="container">
                    <hr>
                    <HR width="40%">
                    <h2>¿Qué quieres hacer?</h2>


                    <p>Elija la opción deseada</p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="speaker">
                        <img src="~/Content/img/speakers/VerAsignatura.png" alt="Opcion 1" class="img-fluid">
                        <div class="details">
                            <h3><a href="/Estudiantes/Asignaturas">Asignaturas</a></h3>
                            <p>Haga click aquí para visualizar sus asignaturas.</p>
                            <div class="social">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="speaker">
                        <img src="~/Content/img/speakers/VerCalificaciones.png" alt="Opcion 2" class="img-fluid">
                        <div class="details">
                            <h3><a href="/Estudiantes/Calificaciones">Calificaciones</a></h3>
                            <p>Haga click aquí para visualizar sus calificaciones.</p>
                            <div class="social">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="speaker">
                        <img src="~/Content/img/speakers/Ranking.png" alt="Opcion 6" class="img-fluid">
                        <div class="details">
                            <h3><a href="/Estudiantes/Ranking">Ranking</a></h3>
                            <p>Haga click aquí para visualizar el ranking estudiantil.</p>
                            <div class="social">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>


    <!--==========================
      Footer
    ============================-->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-info">
                        <img src="/Content/img/logo.png" alt="UTF">
                        <p>Bienvenido al sistema de la Universidad Técnicas Fundamentales.</p>
                    </div>


                    <div class="col-lg-3 col-md-3 footer-contact">
                        <h4>Contáctanos</h4>
                        <p>
                            Av.GC 211 <br>
                            Santo Domingo, D.N 10100<br>
                            República Dominicana<br>
                            <strong>Teléfono:</strong> +1 809 533 4831<br>
                            <strong>Email:</strong> info@utf.com<br>
                        </p>

                    </div>

                </div>

            </div>
        </div>


        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>UTF</strong>. Todos los derechos reservados
            </div>

        </div>
    </footer><!-- #footer -->

    <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="/Content/lib/jquery/jquery.min.js"></script>
    <script src="/Content/lib/jquery/jquery-migrate.min.js"></script>
    <script src="/Content/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Content/lib/easing/easing.min.js"></script>
    <script src="/Content/lib/superfish/hoverIntent.js"></script>
    <script src="/Content/lib/superfish/superfish.min.js"></script>
    <script src="/Content/lib/wow/wow.min.js"></script>
    <script src="/Content/lib/venobox/venobox.min.js"></script>
    <script src="/Content/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Form JavaScript File -->
    <script src="/Content/contactform/contactform.js"></script>

    <!-- Template Main Javascript File -->
    <script src="/Content/js/main.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script defer>
        function notificationme() {

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "100",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "show",
                "hideMethod": "hide"
            };

            if("@ViewBag.success" == "true")
                toastr.success('@ViewBag.message');
            else if ("@ViewBag.success" == "false")
                toastr.error('@ViewBag.message');
        }

        if("@ViewBag.success" == "true" || "@ViewBag.success" == "false")
        {
            notificationme();
    }
    </script>
</body>

</html>