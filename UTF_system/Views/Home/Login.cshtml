
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Home/Index.cshtml";
}
<html>
<head>
    <style>
        body {
            background-image: url(../../Content/bg.jpg)
        }
    </style>

    <!-- Favicons -->
    <link href="~/Content/img/favicons/favicon1.png" rel="icon">
    <link href="~/Content/img/favicons/favicon2.png" rel="icon">
    <link href="~/Content/img/favicons/favicon3.png" rel="icon">

    <!-- Libreria para el toast message-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
</head>


<body>

    <h1 align="center"> Bienvenido a UTF! </h1>

    <div class="clear-loading spinner">
        <span></span>
    </div>
    <div class="w3ls-login box box--big">
        <!-- El form inicia aquí -->
        <form action="/Home/Login" method="post">
            <div class="agile-field-txt">
                <label><i class="fa fa-user" aria-hidden="true"></i> ID </label>
                <input type="text" class="form-control" name="id" id="id" placeholder="Ingrese su ID" required="" />
            </div>
            <div class="agile-field-txt">
                <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Contraseña </label>
                <input type="password" class="form-control" name="password" placeholder="Ingrese su contraseña" required="" id="myInput" />
                <div class="agile_label">
                    <input id="check3" name="check3" type="checkbox" value="Mostrar contraseña" onclick="myFunction()">
                    <label class="check" for="check3">Mostrar contraseña</label>
                </div>
                <div class="agile-right">

                </div>
            </div>
            <!-- Script para mostrar la contraseña -->
            <script>
                function myFunction() {
                    var x = document.getElementById("myInput");
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }
                }
            </script>
            <!-- //Aquí termina el script -->
            <input type="submit" value="Ingresar">
        </form>
    </div>

    <!-- // El form termina aquí -->
    <!--copyright-->
    <div class="copy-wthree">
        <p>
            © 2019 UTF
            |Todos los derechos reservados |

        </p>
    </div>
    <!-- JavaScript Libraries -->
    <script src="/Content/lib/jquery/jquery.min.js"></script>
    <script src="/Content/lib/jquery/jquery-migrate.min.js"></script>
    <script src="/Content/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Content/lib/easing/easing.min.js"></script>
    <script src="/Content/lib/superfish/hoverIntent.js"></script>
    <script src="/Content/lib/superfish/superfish.min.js"></script>
    <script src="/Content/lib/wow/wow.min.js"></script>
    <script src="/Content/lib/venobox/venobox.min.js"></script>
    <script src="/Content/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="node_modules/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script defer>
        function notificationme() {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "100",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "show",
                "hideMethod": "hide"
            };
            toastr.error('@ViewBag.message');
        }

            @if (!string.IsNullOrEmpty(ViewBag.message))
            {
                @:notificationme();
            }
    </script>
</body>
</html>